#include <iostream>
using namespace std;
int main()
{
    int rows;
    cin >> rows;
    for (int i = 0; i < rows; i++) {
        char even_char = '*';
        char odd_char = '#';
        if (i % 2 != 0) {
            even_char = '#';
            odd_char = '*';
        }
        
        for (int j = 0; j <= i; ++j) {
            if (j % 2 == 0) {
                cout << even_char;
            } else {
                cout << odd_char;
            }
        }
        cout << endl;
    }
   
    return 0;
}
